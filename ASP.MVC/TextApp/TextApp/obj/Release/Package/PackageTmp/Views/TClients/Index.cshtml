@model IEnumerable<TextApp.EntityFrameworkContext.TClients>

@{
    ViewBag.Title = "Index";
}

<nav>
    <ul style="list-style-type: none;text-align: center">
        <li><a class="ClientCarBtns" href="@Url.Action("Index","TClients")">Clients Table</a></li>
        <li><a class="ClientCarBtns" href="@Url.Action("Index","TCars")">Cars Table</a></li>
    </ul>
</nav>


<div class="no-color btnframe" style="margin-bottom: 5px;">
    <button class ="btn btn-default">@Html.ActionLink("Create New", "Create")</button>
</div>
   
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pesel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="position: relative; ">
        <td class="center-vertical">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="center-vertical">
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td class="center-vertical">
            @Html.DisplayFor(modelItem => item.Pesel)
        </td>
        <td class="center-vertical">
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td class="center-vertical">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <div class="no-color btnframe" style="float: left;">
                <button class ="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button> 
            </div>
            <div class="no-color btnframe" style="float: left;">
                <button class ="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            </div>
            <div class="no-color btnframe">
                <button class ="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </div>         
        </td>
    </tr>
}

</table>
