@model TextApp.Models.TCars

@{
    ViewBag.Title = "Details";
}

<h2 style="text-align:center">@Model.Mark @Model.Model</h2>


 <div class="DetailsCarPanel">
        <br />
        <div>
            <img class="img-border" src="@Url.Content(@Model.ImageSource.ToString())" />
        </div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Mark)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mark)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Model)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumberOf)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOf)
            </dd>
        </dl>
        <p>
            <div class="no-color btnframe">
                <button class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @style = "text-decoration: none;color:white;" })</button>
                <button class="btn btn-primary">@Html.ActionLink("Back to List", "Index", null, new { @style = "text-decoration: none;color:white;" })</button>
            </div>
        </p>
    </div>


